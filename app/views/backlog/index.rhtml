<div id="main">
	<h1>Unassigned Backlog - <span class="small"><%= pluralize(@user_stories.length, "user story") %> (<%= show_story_points(@story_points ||= nil) %>)</span></h1>
	<!-- <p>
		< %= link_to 'Sort by story points', :action => 'index', :order => 'sp' unless params[:order] % >
		< %= link_to 'Sort by priority', :action => 'index' if params[:order] % >
	</p> -->
	<div id="userstorylist">
		<% for @user_story in @user_stories %>
			<%= render :partial => 'show_story_card' %>
		<% end %>
	</div>
</div>
<div id="sidebar">
	<%= sortable_element 'userstorylist', :tag => 'div', :overlap => 'horizontal', :constraint => false, :url => { :action => "sort_release" }, :complete => visual_effect(:highlight, 'storypoints') unless params[:order] %>
	<h2>Tags</h2>
	<%= render(:partial => "shared/tag_cloud", :object => @cloud) %>
	<h2>Info</h2>
	<div id="undefined">
		<h3>Undefined story</h3>
		<p>This story needs estimation before it can be planned into a sprint</p>
	</div>
	<p><%= link_to image_tag("icons/page_white_acrobat.png", :class => 'icon'), { :controller => 'backlog', :action => 'pdf' }, { :alt => "pdf", :title => "pdf" } %> Download pdf of backlog</p>
</div>