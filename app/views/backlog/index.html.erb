<h2><small>Unassigned Backlog:</small> <%= pluralize(@user_stories.length, "user story") %> <small>worth</small> <%= show_story_points(@story_points ||= nil) %></strong> <small>(Average velocity: <%= average_velocity(@project) %></strong>)</span> <%= image_tag "ajax-loader.gif", :style => "display:none", :id => "loading" %></h2>

<div class="row">
  <div class="columns twentyfour" id="backlog-items" data-project="<%= @project.id %>">
    <%= render @user_stories %>
  </div>
</div>

<% content_for :custom_js do %>
  Agileista.setupVelocityMarkers('<%= @velocity %>');
  <%= render :partial => 'juggernaut', :locals => {:uid => @uid} %>
<% end %>
