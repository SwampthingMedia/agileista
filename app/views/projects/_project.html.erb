<tr>
  <% if project.sprints.current.any? %>
    <td><%= link_to(project.name.humanize, project_sprint_path(project.id, project.sprints.current.first), :class => "button small success") %></td>
  <% else %>
    <td><%= link_to(project.name.humanize, project_backlog_index_path(project.id), :class => "button small secondary") %></td>
  <% end %>
  <td><%= pluralize(project.people.count, 'person') %></td>
  <td><%= pluralize(project.user_stories.unassigned.count, 'story') %></td>
</tr>
