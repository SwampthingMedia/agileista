<div class="row">
  <div class="columns large-10 small-10 medium-10">
    <h2>Project Settings</h2>
    <%= simple_form_for @project do |f| %>
      <%= f.input :name %>
      <%= f.input :iteration_length, as: :select, collection: [["1 week", 1], ["2 weeks", 2], ["3 weeks", 3], ["4 weeks", 4]] %>
      <%= f.input :use_estimates %>
      <%= f.button :submit %>
    <% end %>
    <%= link_to "Delete project", project_path(@project), method: :delete, data: {confirm: 'Are you sure? This cannot be undone.'}, class: 'button small alert' %> <abbr>This cannot be undone</abbr>
  </div>

  <div class="columns large-10 large-offset-4">
    <h2>HipChat Integration</h2>
    <%= simple_form_for [@project, @hip_chat_integration] do |f| %>
      <%= f.input :token %>
      <%= f.input :room %>
      <%= f.input :notify %>
      <br>
      <%= f.button :submit, "Save HipChat Settings" %>
    <% end %>

    <h2>Slack Integration</h2>
    <%= simple_form_for [@project, @slack_integration] do |f| %>
      <%= f.input :team %>
      <%= f.input :token %>
      <%= f.input :channel %>
      <br>
      <%= f.button :submit, "Save Slack Settings" %>
    <% end %>
  </div>
</div>
