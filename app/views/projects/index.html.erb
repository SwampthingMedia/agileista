<% content_for :title, "Projects - Agileista" %>

<h2>Projects</h2>

<div class="row">
  <div class="columns large-20">
    <table class="large-24">
      <thead>
        <tr>
          <th colspan="2">Project</th>
          <th>People</th>
          <th>User Stories</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <%= render project %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @projects.empty? %>
  <%= link_to 'Create your first project', new_project_path %>
<% end %>
