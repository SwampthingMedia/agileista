<% unless user_story.story_points %>
  <div class="panel">
    <h3>Planning Poker</h3>
    <div class="row">

      <div class="fourteen columns">
        <div class="row">
          <%= simple_form_for [project, user_story], :html => {:id => 'form_estimate_story'}, :url => estimate_project_sprint_user_story_path(project, user_story), :remote => true do |f| %>
            <div class="two columns">
              <%= f.label :story_points, label: "Estimate", class: 'right inline' %>
            </div>
            <div class="ten columns">
              <%= f.input :story_points, label: false, input_html: { placeholder: '0, 1, 3, 5, 8, 13, 20 ...' }, class: 'eight' %>
            </div>
            <div class="four columns end">
              <%= f.submit 'Submit estimate', :class => 'button' %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="eight columns" id="pp-estimates">
        <ul class="square" id="secret-estimates"></ul>
        <p id="average-estimate"></p>
        <a href="#" id="show-estimates">Reveal estimates</a>
      </div>

    </div>
  </div>
<% end %>
