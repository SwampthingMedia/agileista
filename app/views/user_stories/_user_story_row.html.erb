<tr id="item_<%= user_story_row.id %>" class="<%= cycle('odd', 'even', :name => "user_stories") %> user_story" data-story="<%= user_story_row.id %>">
  <td><%= user_story_state(user_story_row.state).html_safe %></td>
  <td class="id"><%= link_to user_story_row.id, show_link(user_story_row) %></td>
  <td class="definition"><%= parse_definition(user_story_row.definition).html_safe %></td>
  <td class="points"><%= show_story_points(user_story_row.story_points, :unit => "", :badge => true) %></td>
  <td class="stakeholder"><%= show_stakeholder(user_story_row) %></td>
  <td class="when"><%= user_story_row.created_at.strftime("%d/%m/%y") %></td>
  <td><%= link_to 'Edit', edit_link(user_story_row), :class => "button" %></td>
</tr>
