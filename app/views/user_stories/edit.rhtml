<div id="navii">
    <ul>
        <% if params[:sprint_id] -%>
        <li><%= link_to "Back to sprint planning", :controller => 'sprint_planning', :action => 'show', :id => params[:sprint_id] %></li>
		<% elsif params[:from] && params[:from] == 'tb' -%>
		<li><%= link_to "Back to task board", :controller => 'sprint' %></li>
    	<% else %>
    	<li><%= link_to "Back to backlog", :controller => 'backlog' %></li>
    	<li><%= link_to "Add another user story", :controller => 'user_stories', :action => 'new' if @current_user.is_a?(TeamMember) %></li>
    	<li><%= link_to "Add another user story", :controller => 'user_stories', :action => 'add' if @current_user.is_a?(Contributor) %></li>
    	<% end -%>
	</ul>
	<div class="c">&nbsp;</div>
</div>	
<div id="main">
	<h1>Edit user story</h1>
	<%= error_messages_for :user_story %>
	<% form_for :user_story, @user_story, :url => {:action => 'update', :id => @user_story, :sprint_id => params[:sprint_id], :from => params[:from]} do |@us| %>
		<%= render :partial => 'form' %>
		<%= submit_tag "Save changes to user story" %>
	<% end %>
</div>
<div id="sidebar">
	<%= render :partial => 'acceptance_crit_holder' %>
</div>
