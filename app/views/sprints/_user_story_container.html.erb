<div id="user_story_container_<%= user_story.id %>">
  <div class="storycards">
    <% if first -%><h2>User story</h2><% end -%>
    <%= render :partial => 'sprints/user_story', :locals => {:user_story => user_story, :count => count} %>
  </div>
  <div class="taskcards" id="incomplete_<%= user_story.id %>">
    <% if first -%><h2>Incomplete</h2><% end -%>
    <%= render :partial => 'sprints/task_card', :collection => user_story.tasks.incomplete, :locals => {:positions => user_story_positions} %>
  </div>
  <div class="taskcards" id="inprogress_<%= user_story.id %>">
    <% if first -%><h2>In play</h2><% end -%>
    <%= render :partial => 'sprints/task_card', :collection => user_story.tasks.inprogress, :locals => {:positions => user_story_positions} %>
  </div>
  <div class="taskcards" id="complete_<%= user_story.id %>">
    <% if first -%><h2>Done</h2><% end -%>
    <%= render :partial => 'sprints/task_card', :collection => user_story.tasks.complete, :locals => {:positions => user_story_positions} %>
  </div>
</div>
<div class="c">&nbsp;</div>
