<div class="row">
  <div class="large-24 small-24 medium-24 columns">
    <div class="user-story panel" id="user_story_container_<%= user_story.id %>" data-status="<%= user_story.status %>" data-story="<%= user_story.id %>" data-points="<%= user_story.story_points %>">
      <div class="row">
        <div class="large-24 small-24 medium-24 columns">
          <%= render partial: 'sprints/user_story_card', locals: {sprint: sprint, user_story: user_story, tasks: true} %>
        </div>
      </div>
      <div class="row hide-for-small">
        <div class="large-8 small-8 medium-8 columns tasks incomplete" id="incomplete_<%= user_story.id %>">
          <%= render partial: 'sprints/task_card', collection: Task.filter_for_incomplete(user_story.tasks), locals: {sprint: sprint, user_story: user_story} %>
          <%= render partial: 'sprints/new_task_card', locals: {sprint: sprint, user_story: user_story, tasks: true} %>
        </div>
        <div class="large-8 small-8 medium-8 columns tasks inprogress" id="inprogress_<%= user_story.id %>">
          <%= render partial: 'sprints/task_card', collection: Task.filter_for_inprogress(user_story.tasks), locals: {sprint: sprint, user_story: user_story} %>
        </div>
        <div class="large-8 small-8 medium-8 columns tasks complete" id="complete_<%= user_story.id %>">
          <%= render partial: 'sprints/task_card', collection: Task.filter_for_complete(user_story.tasks), locals: {sprint: sprint, user_story: user_story} %>
        </div>
      </div>
    </div>
  </div>
</div>
