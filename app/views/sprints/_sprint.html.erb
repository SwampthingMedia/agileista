<tr>
  <td class="<%= 'highlight' if @stats_since_sprint.to_i == sprint.id %>"><%= link_to sprint.name, project_sprint_path(@project, sprint) %></td>
  <td><%= sprint.goal %></td>
  <td><%= sprint.total_story_points %></td>
  <td><%= sprint.calculated_velocity %></td>
  <td><%= show_date(sprint.start_at) %></td>
  <td><%= show_date(sprint.end_at) %></td>
  <td>
    <%= link_to 'Show', project_sprint_path(@project, sprint), :class => 'button tiny' %>
    <% if !sprint.finished? %>
      <%= link_to 'Edit', edit_project_sprint_url(@project, sprint), :class => 'button tiny' %>
      <%= link_to 'Plan', plan_project_sprint_url(@project, sprint), :class => 'button tiny' %>
    <% end %>
    <% if scrum_master? && sprint.finished? %>
      <%= link_to 'Calc stats from here', set_stats_project_sprint_path(@project, sprint), :method => 'post', :class => (@stats_since_sprint.to_i == sprint.id ? 'alert button tiny' : 'button tiny') if current_user.scrum_master_for?(@project) %>
    <% end%>
  </td>
</tr>
