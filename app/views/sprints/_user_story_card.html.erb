<div class="tb-backlog-item">
  <div class="row">
    <div class="sixteen columns">
      <%= link_to edit_project_user_story_path(@project, user_story) do %>
        #<%= user_story.id %>
      <% end %>
      <%= link_to edit_project_user_story_path(@project, user_story) do %>
        <%= show_story_points(user_story.story_points, :badge => true) %>
      <% end %>&nbsp;<%= parse_definition(user_story.definition).html_safe %>
    </div>

    <div class="text-right eight columns hide-for-small">
      <strong>Stakeholder:</strong> <%= show_stakeholder(user_story) %> <span class="hide-for-medium-down"><strong>Created:</strong> <%= user_story.created_at.strftime("%d/%m/%y") %></span>
    </div>
  </div>
</div>
