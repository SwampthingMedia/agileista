<dl id="task_card_<%= task_card.id %>" class="task_card" title="<%=h task_card.user_story.definition %>">
  <dt class="clearfix">
    <% if current_user.is_a?(TeamMember) %>
      <strong><%= "##{user_story.id}.#{task_card.position}" %></strong>
      <%= link_to 'Edit', edit_user_story_url(user_story, :from => "tba", :anchor => "user_story_tasks"), :title => "Edit ##{user_story.id}.#{task_card.position}", :class => "edit" %>
    <% else %>
      <%= "##{user_story.id}.#{task_card.position}" %>
    <% end %>
  </dt>
  <dd class="definition">
    <%= h truncate(task_card.definition, :length => 60) %>
    <strong><%= show_assignee(task_card.developer) %></strong>
  </dd>
  <dd class="tasks clearfix"><% form_for :task, task_card, :url => user_story_task_path(:user_story_id => task_card.user_story, :id => task_card, :from => 'tb'), :html => {:method => :put} do |f| %><%= f.text_field(:hours, :size => 3, :class => 'tasksave') %> <%= submit_tag 'Save', :class => 'tasksave' %><% end %></dd>
</dl>