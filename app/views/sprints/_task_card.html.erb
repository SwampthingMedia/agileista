<div class="notecard defined" id="com_<%= task_card.id %>" title="<%=h task_card.user_story.definition %>">
<h2>#<%= positions[task_card.user_story.id].to_s + '.' + task_card.position.to_s %></h2>
<%=h truncate(task_card.definition, 48) %><br />
<strong><%= show_assignee(task_card.developer) %></strong>
<% unless @current_user.is_a?(Contributor) -%>
<p><% form_for :task, task_card, :url => user_story_task_path(:user_story_id => task_card.user_story, :id => task_card, :from => 'tb'), :html => {:method => :put} do |f| %><%= f.text_field(:hours, :size => 3, :class => 'tasksave') %> <%= submit_tag 'Save', :class => 'tasksave' %><% end %></p><div class="tasklinks"><%= link_to 'Show', user_story_task_path(:user_story_id => task_card.user_story, :id => task_card) %> <%= link_to 'Edit', edit_user_story_task_path(:user_story_id => task_card.user_story, :id => task_card) %></div>
<% end -%>
</div>