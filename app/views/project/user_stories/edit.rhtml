<h1>Project: <%= @project.name %></h1>
<div class="summary_pane">
<h2>Edit a user story</h2>
<%= error_messages_for :user_story %>
<% form_for :user_story, @user_story, :url => {:action => 'update', :id => @project, :user_story_id => @user_story} do |@us| %>
	<%= render :partial => 'form' %>
	<%= submit_tag "Save changes to user story" %>
<% end %>
</div>