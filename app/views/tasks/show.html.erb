<div id="main" class="wide">
	<h1>Task: <%=h @task.definition %> <span class="small"><%= link_to 'Edit', edit_user_story_task_path(:user_story_id => @user_story, :id => @task) %> <%= link_to 'Delete', user_story_task_path(:user_story_id => @user_story, :id => @task), :method => :delete, :confirm => "Are you sure?" %></span></h1>
	<div id="leftcontent">
		<h2>Description:</h2>
		<p><%= h@task.description %></p>
		<h2>Hours left:</h2>
		<p><%= show_hours_left(@task.hours) %>
		<h2>Assigned to:</h2>
		<p><%= show_assignees(@task.developers) %></p>
	</div>
	<div id="rightcontent">
		<h2>User story:</h2>
		<p><%=h @user_story.definition %></p>
        <p><%= simple_format(@user_story.description) %></p>
        <p><%= show_story_points(@user_story.story_points) %></p>
		<p><span class="detail">Hours left: </span><%= @user_story.tasks.sum('hours') %><br />
		<span class="detail">Tasks: </span><%= @user_story.tasks.count %></p>
        <%= render :partial => '/user_stories/show_acceptance_criteria' %>
		<h3>Tasks:</h3>
		<ol>
		<% @user_story.tasks.each do |task| -%>
			<li><%= task.definition %> <%= link_to 'Show', user_story_task_path(:user_story_id => @user_story, :id => task) %></li>
		<% end -%>
		</ol>
		<p><span class="detail">Stakeholder: </span><%= show_stakeholder(@user_story, false) %></p>
		<p><span class="detail">Created on </span><%= show_date(@user_story.created_at) %> <%= show_user(@user_story) %></p>
	</div>
</div>