<div id="main">
  <div id="block-text" class="block">
    <%= render(:partial => "shared/navigation/themes_secondary") %>

    <div class="content">
      <h2 class="title">New theme</h2>
      <div class="inner">
        <%= form_for @theme, :url => {:action => 'create'}, :html => {:class => "form"} do |form| %>
          <%= render :partial => 'form', :locals => {:form => form} %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @theme.errors.size > 0 %>
<div id="sidebar">
  <div class="block notice errors">
    <ul class="errorExplanation">
      <% @theme.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

